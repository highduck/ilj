{
  "name": "@highduck/capacitor-billing",
  "version": "0.0.1",
  "description": "In-app-purchases plugin for capacitor",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "js:clean": "rimraf ./dist",
    "js:transpile": "tsc --module ES2015 --target ES5 --outDir dist/esm",
    "build": "run js:clean && run js:transpile",
    "clean": "run js:clean && run android:clean && run ios:clean",
    "watch": "tsc --watch",
    "prepublishOnly": "run js:build",
    "rollup": "rollup --config rollup.config.js",
    "check": "run clean && run android:release && run ios:install && run ios:build",
    "ios:clean": "cd ios && xcodebuild clean -workspace Plugin.xcworkspace -scheme Plugin",
    "ios:install": "cd ios && pod install --repo-update",
    "ios:build": "cd ios && xcodebuild build -workspace Plugin.xcworkspace -scheme Plugin -destination 'platform=iOS Simulator,name=iPhone 11 Pro Max,OS=13.2.2'",
    "ios": "run ios:clean && run ios:pods && run ios:build",
    "android:clean": "cd android && ./gradlew clean",
    "android:release": "cd android && ./gradlew assembleRelease",
    "android": "run android:clean && run android:release"
  },
  "author": "eliasku",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^2.0.1"
  },
  "devDependencies": {
    "@capacitor/android": "^2.0.1",
    "@capacitor/ios": "^2.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "HighduckCapacitorBilling.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/highduck/ilj"
  },
  "bugs": {
    "url": "https://github.com/highduck/ilj/issues"
  }
}
