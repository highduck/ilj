{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "outDir": "dist/esm",
//    "allowJs": true,
//    "noEmitHelpers": true,
//    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
//    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@highduck/math": [
        "../packages/math/src/index.ts"
      ],
      "@highduck/anijson": [
        "../packages/anijson/src/index.ts"
      ],
      "@highduck/core": [
        "../packages/core/src/index.ts"
      ],
      "@highduck/live-inspector": [
        "../tools/live-inspector/src/index.ts"
      ]
    },
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}