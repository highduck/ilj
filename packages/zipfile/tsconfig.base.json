{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "**/node_modules",
    "dist/**",
    "./src/**/*.spec.ts"
  ]
}