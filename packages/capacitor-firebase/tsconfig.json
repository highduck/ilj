{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": "./",
    "paths": {
      "@AppConfig": ["./src/config.ts"]
    }
  },
  "files": [
    "src/index.ts",
    "src/config.ts",
    "src/web.ts"
  ]
}
