{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "declarationDir": "dist/types"
  },
  "exclude": [
    "**/node_modules",
    "dist/**"
  ]
}