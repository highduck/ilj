{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist/cjs",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "rootDir": "./src"
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}