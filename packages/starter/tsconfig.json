{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "paths": {
      "@highduck/math": [
        "../math/src"
      ],
      "@highduck/anijson": [
        "../anijson/src"
      ],
      "@highduck/core": [
        "../core/src"
      ],
      "@highduck/capacitor-admob": [
        "../capacitor-admob/src"
      ],
      "@highduck/capacitor-billing": [
        "../capacitor-billing/src"
      ],
      "@highduck/capacitor-firebase": [
        "../capacitor-firebase/src"
      ],
      "@highduck/capacitor-play-games": [
        "../capacitor-play-games/src"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/index.ts",
    "**/node_modules",
    "dist/**"
  ]
}