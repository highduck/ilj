    "rootDir": "./src",
    "outDir": "./dist",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "references": [
    {
      "path": "../core/tsconfig.esm.json"
