{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/esm",
    "declarationDir": "dist/types",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmitOnError": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "**/node_modules",
    "dist/**"
  ]
}