{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/esm",
    "declarationDir": "dist/esm",
    "declaration": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "lib": [
      "dom",
      "es5",
      "es2019",
      "scripthost",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "exclude": [
    "**/node_modules",
    "dist/**"
  ]
}