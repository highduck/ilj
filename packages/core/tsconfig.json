{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "paths": {
      "@highduck/math": [
        "../math/src"
      ],
      "@highduck/anijson": [
        "../anijson/src"
      ]
    },
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/index.ts",
    "**/node_modules",
    "dist/**"
  ]
}