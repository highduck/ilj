{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "DOM"
    ],
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist/esm",
    "declarationDir": "dist/types",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "rootDir": "src"
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "**/node_modules",
    "dist/**"
  ]
}