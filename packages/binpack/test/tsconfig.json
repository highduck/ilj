{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist/commonjs",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "composite": true
  },
  "references": [
    {
      "path": "../tsconfig.commonjs.json"
    }
  ],
  "files": [
    "./index.ts"
  ],
  "include": [
    "./*.ts"
  ],
  "exclude":[
    "dist/**",
    "**/node_modules"
  ]
}