{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true
  },
  "references": [
    {
      "path": "../tsconfig.esm.json"
    }
  ],
  "files": [
    "./index.ts"
  ],
  "include": [
    "./*.ts"
  ],
  "exclude":[
    "dist/**",
    "**/node_modules"
  ]
}