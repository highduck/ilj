{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "DOM"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": "."
  },
  "files": [
    "./index.ts"
  ]
}