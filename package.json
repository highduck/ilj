{
  "scripts": {
    "upgrade": "yarn upgrade-interactive",
    "all:build": "yarn workspaces foreach --topological-dev -p -v run build",
    "all:ci": "yarn workspaces foreach --topological-dev -p -v run ci",
    "all:clean": "yarn workspaces foreach -p -v run clean && run clean:ts",
    "capacitor:check": "yarn workspaces foreach -v run check",
    "capacitor:clean": "yarn workspaces foreach -p -v run clean",
    "capacitor:ios": "yarn workspaces foreach -p -v run ios",
    "capacitor:android": "yarn workspaces foreach -v run android",
    "clean:ts": "rimraf packages/**/*.tsbuildinfo",
    "rebuild-solution": "run clean:ts && tsc -b -v tsconfig.solution.json",
    "watch-solution": "run clean:ts && tsc -b -w -v tsconfig.solution.json"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "modules/*"
  ],
  "devDependencies": {
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  }
}
