{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@highduck/anijson": [
        "../../std/anijson/src/index.ts"
      ],
      "@highduck/easing": [
        "../../std/easing/src/index.ts"
      ],
      "@highduck/math": [
        "../../std/math/src/index.ts"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/index.ts",
    "**/node_modules",
    "dist/**"
  ]
}